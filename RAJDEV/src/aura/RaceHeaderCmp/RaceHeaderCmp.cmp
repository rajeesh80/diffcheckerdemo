<aura:component implements="flexipage:availableForAllPageTypes"  description="This component can handle custom page header">
	<ltng:require styles="/resource/SLDS2/assets/styles/salesforce-lightning-design-system.min.css" />
    <aura:attribute name="title" type="String" access="global" default="Race Tracker" description="Attribute to customize title of the page"/>
    <div class="slds">
    	<div class="slds-page-header">
        	<p class="slds-page-header__title" title="{!v.title}">{!v.title}</p>
        </div>
    </div>
</aura:component>